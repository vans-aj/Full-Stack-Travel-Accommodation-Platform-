<% layout("layout/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit Listing</h3>
            <pre><%= JSON.stringify(listing, null, 2) %></pre> <!-- Debugging log -->
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-title">Title</label>
                    <input id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a title.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-title">Description</label>
                    <textarea id="description" class="form-control" name="listing[description]" required><%= listing.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a description.</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-title">Image URL</label>
                    <input id="image" class="form-control" name="listing[image]" value="<%= listing.image %>" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a valid image URL.</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-title">Price</label>
                        <input id="price" class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter a price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-title">Country</label>
                        <input id="country" class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required>
                        <div class="valid-feedback">Looks good!</div>
                        <div class="invalid-feedback">Please enter a country.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-title">Location</label>
                    <input id="location" class="form-control" name="listing[location]" value="<%= listing.location %>" type="text" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a location.</div>
                </div>
                <br><br>
                <button class="btn btn-dark">Edit</button>
            </form>
        </div>
    </div>
</body>
</html>